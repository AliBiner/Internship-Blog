@using Blog.Models.Dtos
@model Blog.Models.Dtos.UserInformationDto
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

}


<div class="container">
    <main id="main" class="main">
    <section class="section profile">
            <div class="row">
                <div class="col-xl-4">

                    <div class="card">
                        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                            <img src="~/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                            <h2>@Model.FullName</h2>
                            <h3>@Model.Role</h3>
                            <div class="social-links mt-2">
                                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-xl-8">

                    <div class="card">
                        <div class="card-body pt-3">
                            <!-- Bordered Tabs -->
                            <ul class="nav nav-tabs nav-tabs-bordered">

                                <li class="nav-item">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profil</button>
                                </li>

                                <li class="nav-item">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Düzenle</button>
                                </li>

                                <li class="nav-item">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Şifre Değiştir</button>
                                </li>

                            </ul>
                            <div class="tab-content pt-2">

                                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                    <h5 class="card-title">Hakkında</h5>
                                    <p class="small fst-italic">@Model.ProfileDescription</p>

                                    <h5 class="card-title">Profil Detay</h5>

                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label ">Ad Soyad</div>
                                        <div class="col-lg-9 col-md-8">@Model.FullName</div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label">Rol</div>
                                        <div class="col-lg-9 col-md-8">@Model.Role</div>
                                    </div>





                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label">Telefon</div>
                                        <div class="col-lg-9 col-md-8">@Model.Phone</div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label">Email</div>
                                        <div class="col-lg-9 col-md-8">@Model.Email</div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 label">Kayıt Tarihi</div>
                                        <div class="col-lg-9 col-md-8">@Model.CreateDate</div>
                                    </div>

                                </div>
                                
                                    @{
                                        Html.RenderAction("UpdateUser","Settings");
                                    }
                                
                               
                                

                                @{
                                    Html.RenderAction("UpdatePassword", "Settings");
                                }
                            




                            </div><!-- End Bordered Tabs -->

                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->
</div>

