@using Blog.Layers.Models.Dtos
@model Blog.Layers.Models.Dtos.UpdateUserInformationDto
@{
    var myDto = ViewData["Model"] as UserInformationDto;
}
<div class="tab-pane fade profile-edit pt-3" id="profile-edit">

    <!-- Profile Edit Form -->
    @using (Html.BeginForm("UpdateUser", "Settings", FormMethod.Post))
    {
        <form >
            <div class="row mb-3">
                <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profil Resmi</label>
                <div class="col-md-8 col-lg-9">
                    <img src="~/assets/img/profile-img.jpg" alt="Profile">
                    <div class="pt-2">
                        <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                        <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Ad</label>
                <div class="col-md-8 col-lg-9">
                    <input name="Name" type="text" class="form-control" id="Name" value="@myDto.Name">
                </div>
            </div>
            <div class="row mb-3">
                <label for="fullName" class="col-md-4 col-lg-3 col-form-label">İkinci Ad</label>
                <div class="col-md-8 col-lg-9">
                    <input name="MiddleName" type="text" class="form-control" id="MiddleName" value="@myDto.MiddleName">
                </div>
            </div>
            <div class="row mb-3">
                <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Soyad</label>
                <div class="col-md-8 col-lg-9">
                    <input name="Surname" type="text" class="form-control" id="Surname" value="@myDto.Surname">
                </div>
            </div>

            <div class="row mb-3">
                    <label for="about" class="col-md-4 col-lg-3 col-form-label">Hakkında</label>
                    <div class="col-md-8 col-lg-9">
                        <textarea name="ProfileDescription" class="form-control" id="ProfileDescription" style="height: 100px" value="@myDto.ProfileDescription"></textarea>
                    </div>
                </div>

            <div class="row mb-3">
                <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Telefon</label>
                <div class="col-md-8 col-lg-9">
                    <input name="Phone" type="text" class="form-control" id="Phone" value="@myDto.Phone">
                </div>
            </div>

            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                <div class="col-md-8 col-lg-9">
                    <input name="Email" type="email" class="form-control" id="Email" value="@myDto.Email">
                </div>
            </div>


            @*<div class="row mb-3">
                    <label for="Twitter" class="col-md-4 col-lg-3 col-form-label">Twitter Profile</label>
                    <div class="col-md-8 col-lg-9">
                        <input name="twitter" type="text" class="form-control" id="Twitter" value="https://twitter.com/#">
                    </div>
                </div>*@



            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    }
    <!-- End Profile Edit Form -->

</div>

