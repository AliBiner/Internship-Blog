@model Blog.Layers.Models.Dtos.EntryDtos.EntryShareDtoTo

@{
    ViewBag.Title = "EntryShare";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <main id="main" class="main">


        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                           
                            
                            @using (Html.BeginForm("EntryShare", "Entry", FormMethod.Post))
                            { 
                                <div class="my-3">
                                    <h5 class="card-title">Editör</h5>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-1"><strong>Başlık</strong></div>
                                    <input class="col-md-11" type="text" name="Title" id="Email" required>
                                </div>
                               
                                <div class="mb-3">
                                    @Html.TextAreaFor(model => model.Description, new { @class = "editor" })
                                </div>
                                
                                <div class="mb-3">
                                    @Html.TextAreaFor(model=>model.Summary, new { @class="col-md-12",style="height: 100px",placeholder="Özet"})
                                    @*<textarea name="Title" placeholder="Özet" class="col-md-12" style="height: 100px"></textarea>*@
                                </div>
                               
                                @*<input type="text" name="Title" id="Email" placeholder="Özet" required>*@
                                <input type="hidden" name="UserId" value="@Guid.Parse(Session["Id"].ToString())"/>
                                <input type="submit" value="Yayınla"/>
                            }


                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->
</div>


