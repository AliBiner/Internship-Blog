@model Blog.Layers.Models.Dtos.CommentDtos.CommentByEntryIdDto

<div class="row justify-content-center mt-5">
    @using (Html.BeginForm("PostCommitByEntryId", "Entry", FormMethod.Post))
    {

        <div class="col-lg-12">
            <h5 class="comment-title">Yorum Yap</h5>
            <div class="row">
                <div class="col-lg-6 mb-3">
                    <label for="comment-name">Başlık</label>
                    <input type="text" class="form-control" id="comment-name" name="Title" placeholder="Başlık">
                </div>
                <div class="col-12 mb-3">
                    <label for="comment-message">Mesaj</label>

                    <textarea class="form-control" id="comment-message" name="Message" placeholder="Mesaj" cols="30" rows="10"></textarea>
                </div>
                <div class="col-12">
                    <input type="hidden" name="UserId" value="@Guid.Parse(Session["Id"].ToString())"/>
                        <input type="hidden" name="EntryId" value="@Guid.Parse(ViewBag.Id)"/>
                    <input type="submit" class="btn btn-primary" value="Paylaş">
                </div>
            </div>
        </div>

    }


</div>