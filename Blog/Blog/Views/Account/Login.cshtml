@model Blog.Models.Dtos.LoginDto
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<main id="main">
    <section id="contact" class="contact mb-5">
        <div class="container" data-aos="fade-up" style="width: 50%;">
        <div class="row gy-4">
            <div class="form mt-5">
              
                <form action="/Account/Login" method="post" role="form" class="php-email-form">
                    <div>
                        <div class="form-group ">
                            <input type="email" name="Email" class="form-control" id="Email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="Password" id="Password" placeholder="Şifre" required>
                        </div>
                    </div>
                    <div class="my-3">
                        @ViewBag.Error
                    </div>
                    
                    <div class="text-center"><button type="submit">Giriş Yap</button></div>
                    <br />
                    <div class="text-center"><a href="@Url.Action("Register")">Henüz Hesabınız Yok Mu? Kayıt Olun.</a></div>

                </form>
               
               
            </div>
        </div>
        </div>
    </section>
</main>